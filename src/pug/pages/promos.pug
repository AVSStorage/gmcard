    - var pageClass = 'index-page';
    -
        let cards = [
        {type: 1, discount: 50, blocked: false, src: "/assets/img/card.png", text:"Скидка на все модели AirMax до 50% в Магазине StoreShop", sale_text: 'Скидка до 50%', sale_src: '/assets/img/discount.png',special: false,special_info:false},
