extends ../layout/main

block variables
  - var title = 'Webpack + Pug';
  - var description = 'Description for Webpack + Pug';
  - var pageClass = 'index-page';


block content
  section.container
    nav.col-lg-12.navigation.d-flex
      - let items = ['Главная','Пользователям','Кэшбек','Для бизнеса','Правила','Контакты']
      - let links = ['']
      ul.d-flex.col-lg-7.justify-content-between.pt-3.pb-3
        each val in items
          li.text-white.d-flex.align-items-center
            +link('/foo', val)(class="text-white")
      div.row.d-flex.col-lg-5.no-gutters.pt-2.pb-2.pr-0.input-border-left
        div.col-lg-9.search
         input(class="col-lg-9 search__input" placeholder="Что Вы хотите найти?")/
         button.btn.text-black.dropdown-toggle.col-lg-3.btn-border-left Везде
        div.col-lg-3.d-flex
          button.search__button.col.ml-3.font-weight-bold Найти
  section.container.d-flex.pt-0.brd-bottom.flex-wrap
    - let imageDescriptions = ['Для нее','Для него','Детям','Для дома','Техника','Красота','Услуги','Туризм','Магазины','Поесть','Для авто','Обучение']
    div.col-lg-12.d-flex.p-0
      each val, index in imageDescriptions
           +categories(index, val)
      //include ../includes/modules/categories-dropdown
  section.container.d-flex.pt-0.flex-wrap.mt-4
    button.slider-arrow.slider-arrow--prev.d-flex.align-items-center
      i.material-icons.text-brown keyboard_arrow_left
    include ../includes/modules/slider
    button.slider-arrow.slider-arrow--next.d-flex.align-items-center
      i.material-icons.text-brown keyboard_arrow_right
  section.container.filter.pt-0.brd-bottom
    form(method="POST" class="d-flex justify-content-between align-items-center ml-2 mr-3")
      p.text-big.text-white.font-weight-bold Фильтровать
      div.d-flex.align-items-center
        label(for="city" class="filter__label text-white mr-4") Ваш город
        select(id="city" class="filter__select")
          option(checked="" value="1") Чебоксары
          option(checked="" value="2") Москва
          option(checked="" value="3") Санкт-Петербург
      div.d-flex.align-items-center
        label(for="shop" class="filter__label text-white mr-4") Магазины
        select(id="shop" class="filter__select")
          option(checked="" value="1") Все
          option(checked="" value="2") ASOS
          option(checked="" value="3") StoreShop
      div.d-flex.align-items-center
        label(for="sales" class="filter__label text-white mr-4") Все акции
        select(id="sales" class="filter__select")
          option(checked="" value="1") Все акции
          option(checked="" value="2") 1 + 1
          option(checked="" value="3") Подарок за покупку
    section.container.pl-2
      h1.font-weight-bold.text-white.cards__title Популярные акции
      include ../includes/modules/cards


block script
  script(type='text/javascript').
    $(document).ready(function(){
      $('.slider__main').slick({
          slidesToShow: 1,
          infinite: true,
          slidesToScroll: 1,
          prevArrow: $('.slider-arrow--prev'),
          nextArrow: $('.slider-arrow--next')
      })

   
      $('.filter__select').niceSelect();

    });



